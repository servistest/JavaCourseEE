<?xml version="1.0"?>

<mapping >

    <class name="edu.mvc.model.Contacts" >
        <field name="contacts" type="edu.mvc.model.Contact" collection="arraylist">
            <bind-xml name="contact"/>
        </field>
    </class>

    <class name="edu.mvc.model.Contact" identity="id">
        <map-to xml="contact"/>
        <field name="id" type="long">
            <bind-xml name="id" node="element"/>
        </field>
        <field name="firstName" type="string">
            <bind-xml name="firstName" node="element"/>
        </field>
        <field name="lastName" type="string">
            <bind-xml name="lastName" node="element"/>
        </field>
        <field name="birthDate" type="string" handler="dateHandler">
            <bind-xml name="birthDate" node="element"/>
        </field>
        <field name="description" type="string">
            <bind-xml name="description" node="element"/>
        </field>
        <field name="photo" type="bytes">
            <bind-xml name="photo" node="element"/>
        </field>

    </class>
    <field-handler name="dateHandler" class="edu.mvc.service.castor.DateTimeFieldHandler">
        <param name="date-format" value="yyyy-MM-dd"/>
    </field-handler>




</mapping>
