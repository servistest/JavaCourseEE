<?xml version="1.0"?>

<mapping >

    <class name="edu.restfull.model.Contacts" >
        <field name="contacts" collection="arraylist">
            <bind-xml name="contact"/>
        </field>
    </class>

    <class name="edu.restfull.model.Contact" identity="id">
        <map-to xml="contact"/>
        <field name="id" type="long">
            <bind-xml name="id" node="element"/>
        </field>
        <field name="firstName" type="string">
            <bind-xml name="firstNme" node="element"/>
        </field>
        <field name="lastName" type="string">
            <bind-xml name="firstName" node="element"/>
        </field>
        <field name="birthDate" type="string" handler="dateHandler">
            <bind-xml name="birthDate" node="element"/>
        </field>

    </class>
    <field-handler name="dataHandler" class="edu.restfull.service.castor.DateTimeFieldHander">
        <param name="date-format" value="yyyy-MM-dd"/>
    </field-handler>




</mapping>
